<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="18dp"
    >

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:hint="@string/input_password_old"
        android:inputType="textPassword"
        android:textColor="@color/colorTxtTitle"
        app:met_floatingLabelTextSize="12sp"
        app:met_textColorHint="@color/md_deep_orange_500"
        app:met_baseColor="@color/md_deep_orange_500"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/md_deep_orange_500"
        app:met_floatingLabelTextColor="@color/md_deep_orange_500"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:hint="@string/input_password_new"
        android:inputType="textPassword"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/md_deep_orange_500"
        app:met_textColorHint="@color/md_deep_orange_500"
        app:met_floatingLabelTextSize="12sp"
        app:met_baseColor="@color/md_deep_orange_500"
        app:met_primaryColor="@color/md_deep_orange_500"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/dialog_repeat_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="12sp"
        android:hint="@string/input_password_repeat"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/md_deep_orange_500"
        app:met_textColorHint="@color/md_deep_orange_500"
        app:met_floatingLabelTextSize="12sp"
        app:met_baseColor="@color/md_deep_orange_500"
        app:met_primaryColor="@color/md_deep_orange_500"
        />


        <TextView
            android:id="@+id/dialog_change_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/dialog_change_password_confirm_shape"
            />
</LinearLayout>
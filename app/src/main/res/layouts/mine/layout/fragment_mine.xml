<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_back"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/ic_mine_back"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="@mipmap/ic_mine_back_wave"
            />

        <TextView
            android:id="@+id/mine_login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/login_now"
            android:textColor="@color/bottom_tab_normal"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/mine_default_user_logo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:background="@drawable/user_logo_background"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_user_logo"

            />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/mine_info_container"
        style="@style/mine_rl_container"
        >

        <TextView
            android:id="@+id/mine_info_txt"
            style="@style/mine_text"
            android:drawableLeft="@mipmap/ic_user_info"
            android:text="@string/user_info"



            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/brown_line"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/mine_read_container"
        style="@style/mine_rl_container"
        >

        <TextView
            android:id="@+id/mine_read_txt"
            style="@style/mine_text"
            android:drawableLeft="@mipmap/ic_read_record"
            android:text="@string/my_read"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/brown_line"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />



    <RelativeLayout
        android:id="@+id/mine_download_container"
        style="@style/mine_rl_container"
        >

        <TextView
            android:id="@+id/mine_downloaded_txt"
            style="@style/mine_text"
            android:drawableLeft="@mipmap/ic_downloaded"
            android:text="@string/my_downloaded"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/brown_line"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/mine_setting_container"
        style="@style/mine_rl_container"
        >

        <TextView
            android:id="@+id/mine_setting_txt"
            style="@style/mine_text"
            android:drawableLeft="@mipmap/ic_check_update"
            android:text="@string/check_update"
            />

        <TextView
            android:id="@+id/current_version"
            style="@style/text_small_gray"
            android:layout_toRightOf="@id/mine_setting_txt"
            android:drawablePadding="6dp"
            android:paddingTop="11dp"
            android:layout_centerVertical="true"
            android:text="@string/current_version"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/brown_line"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />


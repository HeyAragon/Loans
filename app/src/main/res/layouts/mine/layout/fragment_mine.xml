<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    android:background="@color/md_grey_100"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/mine_back"
            />

        <ImageView
            android:id="@+id/mine_default_user_logo"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_user_default"
            />

        <TextView
            android:id="@+id/mine_login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:text="@string/login_now"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </FrameLayout>


    <RelativeLayout
        android:id="@+id/mine_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/md_white_1000"
        >

        <TextView
            android:id="@+id/mine_info_txt"
            style="@style/text_big_normal"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_record"
            android:drawablePadding="6dp"
            android:text="@string/user_info"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@mipmap/ic_arrow_right"
            android:scaleType="centerInside"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        />

    <RelativeLayout
        android:id="@+id/mine_read_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/md_white_1000"
        >

        <TextView
            android:id="@+id/mine_read_txt"
            style="@style/text_big_normal"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/ic_collected"
            android:drawablePadding="6dp"
            android:text="@string/my_read"
            />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:background="@mipmap/ic_arrow_right"
            android:scaleType="centerInside"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        />

    <RelativeLayout
        android:id="@+id/mine_download_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/md_white_1000"
        >
        <TextView
            android:id="@+id/mine_downloaded_txt"
            style="@style/text_big_normal"
            android:text="@string/my_downloaded"
            android:drawableLeft="@mipmap/ic_download"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            />
        <ImageView

            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:background="@mipmap/ic_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        />

    <RelativeLayout
       android:id="@+id/mine_setting_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/md_white_1000"
        >
        <TextView
            android:id="@+id/mine_setting_txt"
            style="@style/text_big_normal"
            android:text="@string/check_update"
            android:drawableLeft="@mipmap/update"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/current_version"
            style="@style/text_small_gray"
            android:text="@string/current_version"
            android:drawablePadding="6dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mine_setting_txt"
            android:paddingTop="3dp"
            />

        <ImageView

            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:background="@mipmap/ic_arrow_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_200"
        />

    <TextView
        android:id="@+id/mine_login_out_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center"
        android:text="@string/login_out"
        android:layout_centerVertical="true"
        android:background="@color/md_white_1000"
        android:layout_marginTop="20dp"
        android:textColor="@color/md_deep_orange_500"
        android:visibility="gone"
        />

</LinearLayout>
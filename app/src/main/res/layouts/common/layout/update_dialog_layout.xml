<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap = "false"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/update_title_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/test_shape"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_cloud"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/new_version"
                android:textColor="@color/white"
                android:textSize="18sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/update_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/update_title_ll"
            android:paddingBottom="16dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="16dp"
            android:text="sdfsdfgdgdfgjdlfgjldjgljdaflgjdaklfjglkdajgl\ndfgdgdgdfgddfgdfgnadnjdafgdsfsdfsdfsdadsfsdfdsf "
            android:textSize="14sp"

            />

        <ProgressBar
            android:id="@+id/update_progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3.5dp"
            android:layout_below="@id/update_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:indeterminateOnly="false"
            android:maxHeight="3.5dp"
            android:progressDrawable="@drawable/progress_bar_states"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/update_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:background="@drawable/update_shape"
            android:layout_below="@id/update_progress_bar"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="36dp"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/update_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update"
            android:layout_alignTop="@id/update_cancel"
            android:background="@drawable/update_shape"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="36dp"
            android:textSize="16sp"
            android:textColor="@color/md_deep_orange_500"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>

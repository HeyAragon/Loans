<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="RtlHardcoded"
    app:contentPadding="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/base_item_root"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/icon_ll"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/base_item_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@null"
                android:layout_marginTop="20dp"
                />

            <com.hackhome.loans.widget.CenterTextView
                android:id="@+id/base_item_name"
                style="@style/text_normal_black"
                android:text="@string/app_name"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>


        <View
            android:id="@+id/base_vertical_line"
            android:layout_width="1dp"
            android:layout_height="84dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/icon_ll"
            android:background="@color/gray"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/base_item_loan_limit"
            style="@style/text_big_black"
            android:text="@string/app_name"
            android:layout_alignTop="@id/base_vertical_line"
            android:layout_toRightOf="@id/base_vertical_line"
            android:layout_toEndOf="@id/base_vertical_line"

            />

        <TextView
            android:id="@+id/base_item_loan_interest"
            style="@style/text_middle_black"
            android:layout_alignLeft="@id/base_item_loan_limit"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/base_vertical_line"
            android:text="@string/app_name"
            />

        <TextView
            android:id="@+id/base_item_loan_description"
            style="@style/text_middle_gray"
            android:layout_alignLeft="@id/base_item_loan_limit"
            android:layout_alignBottom="@id/base_vertical_line"
            android:text="@string/app_name"
            />

        <TextView
            android:id="@+id/base_item_loan_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded"
    android:background="@color/base_back"
    >

    <com.zhouwei.mzbanner.MZBannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:middle_page_cover="false"
        app:open_mz_mode="false"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="12dp"
        >

        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万能钱咖榜"
            android:textSize="17sp"
            android:textColor="@color/bottom_tab_selected"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/left_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mony_left"
            android:layout_toLeftOf="@id/prompt"
            android:layout_centerVertical="true"
            android:layout_marginRight="2dp"
            />
        <ImageView
            android:id="@+id/right_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mony_right"
            android:layout_toRightOf="@id/prompt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            />
    </RelativeLayout>


</LinearLayout>
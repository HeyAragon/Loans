<?xml version="1.0" encoding="utf-8"?>
<!-- 层叠 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners
                android:radius="2dp"

                />

            <gradient
                android:angle="270"
                android:centerColor="@color/base_back"
                android:endColor="@color/base_back"
                android:startColor="@color/base_back" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:startColor="@color/base_back"
                    android:endColor="@color/bottom_tab_normal"
                    android:centerColor="@color/bottom_tab_normal" />
            </shape>
        </clip>
    </item>

</layer-list>